          <a href="/contact"><i class="fa fa-map-marker" aria-hidden="true"></i> CONTACT US</a>
        </div>
        <% if(user) { %>
          <div class="cart">

							<button class="w3view-cart" onClick="location.href='/cart'" type="submit"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></button>

					</div>

        <% } %>
        <div class="clearfix"> </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div><!-- //header-two -->
